<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hang.dao.AdviserDAO">

    <insert id="insertAdviser">
        insert into adviser_info(id, name, tel, info, department, avatar, email, office, education, position,
                                 teachingCourse, researchDirection)
        values (#{id}, #{name}, #{tel}, #{info}, #{department}, #{avatar}, #{email}, #{office}, #{education},
                #{position}, #{teachingCourse}, #{researchDirection})
    </insert>

    <update id="updateAdviserInfo">
        update adviser_info
        <set>
            <if test="name!= null">
                name = #{name},
            </if>

            <if test="tel!= null">
                tel = #{tel},
            </if>

            <if test="info!= null">
                info = #{info},
            </if>

            <if test="department!= null">
                department = #{department},
            </if>
            <if test="avatar!= null">
                avatar = #{avatar},
            </if>
            <if test="email!=null">
                email = #{email},
            </if>
            <if test="office!=null">
                office = #{office},
            </if>
            <if test="education!=null">
                education = #{education},
            </if>
            <if test="position!=null">
                position = #{position},
            </if>
            <if test="teachingCourse!=null">
                teachingCourse = #{teachingCourse},
            </if>
            <if test="researchDirection!=null">
                researchDirection = #{researchDirection}
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="selectAdviserInfo" resultType="com.hang.pojo.data.AdviserDO">
        select *
        from adviser_info
        where id = #{id}
    </select>

    <select id="listAdviser" resultType="com.hang.pojo.data.AdviserDO">
        select *
        from adviser_info
        limit #{start}, #{offset}
    </select>

    <delete id="deleteAdviser">
        delete
        from adviser_info
        where id = #{id}
    </delete>

</mapper>